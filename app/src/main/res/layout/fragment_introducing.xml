<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white_FFFFFF"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/closeButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/background_white_FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="24dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_cross"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ba_introducing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ba_introducing" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ba_introducing"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cormorant_bold"
            android:gravity="center"
            android:text="Introducing HT &amp; MSP simulations!"
            android:textColor="@color/text_dark_0E1012"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/text_twu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/cormorant_regular"
            android:gravity="center"
            android:text="Curious about how vou would look with restored hair or a new hairline? We've got you covered! We offer an exclusive service to our potential clients - a simulation of our HT or MSP treatments. We believe that everyone should be able to see the potential results before committing to the treatment. Simply request your simulation today by leaving your details and uploading a bright and natural selfie.
Within 7 days, one of our designers will send you a personalized simulation."
            android:textColor="@color/text_light_495057"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/bottomInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_twu"
            android:gravity="bottom">

            <RelativeLayout
                android:id="@+id/bottomContainer"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_alignParentBottom="true"
                android:background="#F0FFFFFF">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:progress="10"
                    android:progressTint="@color/primary_dark_brown_503629"
                    android:secondaryProgress="100"
                    android:secondaryProgressTint="@color/background_light_brown_F1F0EA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/background_light_brown_F1F0EA"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:id="@+id/backButtonText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:gravity="center_horizontal"
                                    android:text="Back"
                                    android:textAlignment="center"
                                    android:textColor="@color/primary_brown_7D5F2B"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/selector_brown_text_light_40"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:id="@+id/nextButtonText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/imageContainer"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center_vertical"
                                app:cardBackgroundColor="@color/selector_dark_brown_text_dark_40"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/drawable"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="center"
                                    android:src="@drawable/ic_arrow_right_2_white_19"
                                    tools:ignore="ContentDescription" />
                            </com.google.android.material.card.MaterialCardView>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:gravity="center_horizontal"
                                    android:text="Request Simulation"
                                    android:textAlignment="center"
                                    android:textColor="@color/text_white_FFFFFF"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>